{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=OrderDb;Trusted_Connection=True;TrustServerCertificate=True;",
    "ServiceBus": "Endpoint=sb://<namespace>.servicebus.windows.net/;SharedAccessKeyName=...;SharedAccessKey=..."
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.AzureLogAnalytics" ],
    "MinimumLevel": "Information",
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithProcessId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "AzureLogAnalytics",
        "Args": {
          "workspaceId": "%AZURE_LOG_ANALYTICS_WORKSPACE_ID%",
          "authenticationId": "%AZURE_LOG_ANALYTICS_SHARED_KEY%",
          "logName": "OrderServiceLogs",
          "batchSize": 50,
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },
  "ApplicationInsights": {
    "ConnectionString": "%APPLICATIONINSIGHTS_CONNECTION_STRING%"
  }
}
